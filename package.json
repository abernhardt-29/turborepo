{
  "name": "turborepo-example",
  "private": true,
  "version": "1.0.1",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo run lint --"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
