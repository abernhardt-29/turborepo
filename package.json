    "app-a/**/@types/react": "^19.0.0",
    "app-a/**/@types/react-dom": "^19.0.0",
    "app-b/@types/react": "^19.0.0",
    "app-b/@types/react-dom": "^19.0.0",
    "app-b/**/@types/react": "^19.0.0",
    "app-b/**/@types/react-dom": "^19.0.0",
    "app-c/@types/react": "~18.2.79",
